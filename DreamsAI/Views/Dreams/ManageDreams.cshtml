@model IEnumerable<DreamsAI.Models.Dream>

<h2>Сънища по категории</h2>

<table class="table">
    <thead>
        <tr>
            <th>Заглавие</th>
            <th>Описание</th>
            <th>Дата</th>
            <th>Категория</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td>@item.Category</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Редактирай</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
